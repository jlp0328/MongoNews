<h2>Saved Articles</h2>

    {{#each story}}
    {{#if saved}}

        <a href="/" class="btn btn-info btn-lg saveArticle">
        <span class="glyphicon glyphicon-heart-empty"></span>
                  View Articles!</a>

        <div class="card col-md-6" style="padding-bottom: 15px; text-align: center">
            <img class="card-img-top" src="{{this.image}}">
              <div class="card-block">
              <h4 class="card-title">{{this.title}}</h4>
            <a href="#" data-status="{{this.saved}}" data-id="{{this._id}}" class="btn btn-primary saveArticle">Save Article!</a>
            </div>
        </div>

    {{/if}}
    {{/each}}
